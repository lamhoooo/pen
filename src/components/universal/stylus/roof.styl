.roof-container{
  position fixed;
  display flex;
  top 0;
  left 0;
  width 100%;
  height 62px;
  z-index 99;
  background #ffffff;
  color #ffffff;
  .roof-logo {
    flex 0 0 36px;
    color #333333;
    padding 12px 15px 15px 20px;
    font-size 35px;
    vertical-align top;
  }
  nav{
    flex 0 0 226px;
    display inline-block;
    .nav-chose{
      display inline-block;
      height 20px;
      line-height 20px;
      padding 20px 12px;
      font-size 15px;
      font-family STHeiti;
      color #999999;
      text-decoration none;
      cursor: pointer
      vertical-align: top;
      transition-property: color;
      transition-duration: 0.5s;
      transition-timing-function: ease;
      &:hover {
        color #111111;
      }
      &.active{
        color #111111;
      }
    }
    .nav-more {
      font-size 18px;
    }
  }
  .roof-search-wrap {
    flex 1
    flex-basis: 0
    .roof-search-container{
      &.roof-search-fade-enter-active, &.roof-search-fade-leave-active {
        transition opacity 0.4s linear
      }
      &.roof-search-fade-enter, &.roof-search-fade-leave-active {
        opacity 0
      }
      .roof-search {
        height 40px;
        width 100%;
        box-sizing border-box;
        margin 10px 0;
        border-radius 25px;
        border 1px solid #ffffff;
        outline none;
        background-color #f1f1f1;
        padding 0 30px 2px 42px;
        transition-property: background-color border;
        transition-duration: 0.3s;
        transition-timing-function: ease;
      }
      .roof-search:hover {
        border 1px solid #dddddd;
      }
      .roof-search:focus {
        border 1px solid #dddddd;
        background-color #ffffff;
      }
      .roof-search-logo{
        position absolute;
        margin-top -40px;
        margin-left 13px;
        font-size 18px;
        color: #888888;
      }
    }
  }
  .roof-welcome {
    font-family MingLiU;
    color #333;
    height 62px;
    line-height 62px;
    font-weight bolder;
    padding-left 5px;
    &.roof-welcome-fade-leave-active {
      transition opacity 0.8s linear
    }
    &.roof-welcome-fade-leave-active {
      opacity 0
    }
  }
  .roof-sharePic {
    flex 0 0 50px;
    height 35px;
    line-height 35px;
    text-align center;
    margin 12px 10px 0px 18px;
    padding 0 5px;
    background #ffffff;
    border 1px solid #dddddd;
    outline none;
    border-radius 5px;
    font-size 12px;
    color: #aaaaaa
    text-decoration none
    transition-property color background;
    transition-duration 0.3s;
    transition-timing-function ease;
    &:hover {
      background #222222;
      color: #ffffff
    }
  }
  .roof-mine {
    flex 0 0 85px;
    display inline-block;
    margin-right 20px;
    .roof-message, .roof-personalCenter{
      display inline-block;
      height 28px;
      padding 13px 5px;
      font-size 30px;
      color #bbbbbb;
      transition-property color border;
      transition-duration 0.4s;
      transition-timing-function ease;
      .roof-sign-wrap {
        position: absolute;
        top 58px;
        right 16px;
        width 70px;
        padding 10px 0 10px 15px;
        border-radius 3px;
        font-size 13px;
        background #000000;
        color #ffffff;
        cursor pointer;
        transform-origin 100% 0 0;
        .roof-sign-item {
          height 20px;
          padding 7px 0;
          display block;
          text-decoration none;
          color #ffffff;
          &:hover {
            color #aaaaaa;
          }
          span {
            display inline-block;
            width 55px;
            white-space nowrap;
            overflow hidden;
            text-overflow ellipsis;
          }
        }
        .roof-sign-out {
          text-decoration: underline;
        }
        &:before {
          position absolute;
          content '';
          height 0;
          width 0;
          border-bottom solid 6px #111111;
          border-left solid 6px transparent;
          border-right  solid 6px transparent;
          margin-top -16px;
          margin-left 30px;
        }
        &.roof-sign-enter-active {
          animation roof-more 0.2s;
        }
        @keyframes roof-more {
          0%{
            transform scale(0.8);
            opacity 0
          }
          90% {
            transform scale(1.02);
            opacity 1
          }
          100% {
            transform scale(1);
          }
        }
        &.roof-sign-leave-active {
          transition all 0.2s linear;
          transform scale(0.8);
          opacity 0;
        }
      }
    }
    .roof-message:hover {
      color: #222222;
    }
  }
  .roof-more-wrap {
    position: absolute;
    top 58px;
    left 240px;
    width 120px;
    padding 10px 15px;
    border-radius 3px;
    font-size 12px;
    background #000000;
    color: #ffffff
    cursor pointer;
    transform-origin: 0 0 0;
    .roof-more-item {
      height 20px;
      padding 5px 0;
      &:hover {
        color #aaaaaa;
      }
    }
    .roof-more-share {
      padding 10px 0 0 0;
      display flex
      .roof-more-share-item {
        font-size 20px;
        flex 1;
        &:hover {
          color: #aaaaaa;
        }
      }
    }
    &:before {
      position absolute;
      content '';
      height 0;
      width 0;
      border-bottom solid 6px #111111;
      border-left solid 6px transparent;
      border-right  solid 6px transparent;
      margin-top -16px;
      margin-left 5px;
    }
    &.roof-more-enter-active {
      animation roof-more 0.2s;
    }
    @keyframes roof-more {
      0%{
        transform scale(0.8);
        opacity 0
      }
      90% {
        transform scale(1.02);
        opacity 1
      }
      100% {
        transform scale(1);
      }
    }
    &.roof-more-leave-active {
      transition all 0.2s linear;
      transform scale(0.8);
      opacity 0;
    }
  }
}
