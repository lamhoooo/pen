.picPop-container {
  position fixed;
  top 0;
  bottom 0;
  left 0;
  right 0;
  background rgba(0, 0, 0, 0.7)
  z-index 4
  .picPop-close {
    position absolute
    padding 5px
    font-size 25px;
    top 97px;
    right 3%;
    color: #fff;
    cursor pointer;
  }
  .picPop-img-wrap {
    width 85%;
    height 85%;
    margin 0 auto;
    padding 15px;
    margin-top 100px;
    background #fff;
    border-radius 5px;
    text-align center
    cursor: zoom-out;
    .picPop-img-basicData-wrap {
      padding-bottom  10px;
      overflow hidden;
      .picPop-img-headImg {
        float left;
        height 30px;
        width 30px;
        border-radius 50%;
        margin-right 8px;
        cursor pointer;
      }
      .picPop-img-accountNum {
        float left;
        line-height 30px;
        cursor pointer;
      }
      .picPop-download {
        float right
        padding 5px 25px;
        border 1px solid #ddd;
        color #aaa
        font-size 13px;
        border-radius 3px;
        margin-left 10px;
        cursor pointer;
        &:hover {
          border 1px solid #888;
          color #666;
        }
      }
      .picPop-collect, .picPop-love{
        float right;
        padding 5px 10px;
        border 1px solid #ddd;
        color #aaa
        font-size 13px;
        border-radius 3px;
        margin-left 10px;
        cursor pointer;
        &:hover {
          border 1px solid #888;
          color #666;
        }
      }
      .picPop-love {
        span {
          color: #f07373 !important;
        }
      }
    }
    .picPop-img {
      height 700px;
      text-align center;
    }
    .picPop-titleAndDate {
      padding 8px 0;
      overflow hidden
      .picPop-title {
        float left
        font-size 16px;
        font-weight: bolder;
        color #111
        text-align left
      }
      .picPop-siteAndDate {
        float right;
        font-size 12px;
        color #555
      }
    }
    .picPop-desc {
      letter-spacing 1.2px
      text-align left
      color: #333
    }
  }
}
